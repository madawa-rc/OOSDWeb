<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>registration.StudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailConfirmation</servlet-name>
        <servlet-class>registration.EmailConfirmation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SchoolServlet</servlet-name>
        <servlet-class>registration.SchoolServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/StudentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailConfirmation</servlet-name>
        <url-pattern>/EmailConfirmation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SchoolServlet</servlet-name>
        <url-pattern>/SchoolServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            40
        </session-timeout>
    </session-config>
</web-app>
